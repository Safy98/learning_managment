<div class="w-full">
  <div class="auth-shell">
    <div class="auth-card">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-4") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="page-title text-2xl">Edit User</h1>
        <h2 class="mb-4">Signed in as <b><%= current_user.email %></b></h2>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none"
                                                                              viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                               d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
          </svg>
          <%= f.email_field :email, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "Email Address", autocomplete: "email", autofocus: true %>
        </div>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
            <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
          </svg>
          <%= f.password_field :password, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "New Password", autocomplete: "new-password" %>
        </div>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
            <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
          </svg>
          <%= f.password_field :password_confirmation, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "Confirm Password", autocomplete: "new-password" %>
        </div>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
            <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
          </svg>
          <%= f.password_field :current_password, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "Current Password", autocomplete: "current-password" %>
        </div>
        <%= f.submit "Update", class: "ui-btn ui-btn-primary mt-2 w-full cursor-pointer" %>
        <div class="mt-6">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
