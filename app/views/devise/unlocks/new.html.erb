<div class="w-full">
  <div class="auth-shell">
    <div class="auth-card">
      <h2 class="page-title mb-4 text-2xl">Resend unlock instructions</h2>

      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: "space-y-4") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="ui-input-row">
          <%= f.label :email, class: "ui-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
        </div>
        <div class="actions">
          <%= f.submit "Resend unlock instructions", class: "ui-btn ui-btn-primary w-full cursor-pointer" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
