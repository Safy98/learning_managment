<div class="w-full">
  <div class="auth-shell">
    <div class="auth-card">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "space-y-4") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <h1 class="page-title text-2xl">Change your password</h1>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
            <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
          </svg>
          <%= f.password_field :password, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "New Password", autocomplete: "new-password", autofocus: true %>
        </div>
        <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
            <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
          </svg>
          <%= f.password_field :password, class: "w-full pl-2 outline-none border-none shadow-none border-transparent focus:border-transparent focus:ring-0", placeholder: "Confirm New Password", autocomplete: "new-password" %>
        </div>
        <%= f.submit "Reset Password", class: "ui-btn ui-btn-primary mt-2 w-full cursor-pointer" %>
        <div class="mt-6">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
