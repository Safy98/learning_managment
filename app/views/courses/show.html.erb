<div class="mx-auto flex w-full flex-col gap-6 pb-6 lg:flex-row">
  <div class="mx-auto w-full space-y-4">
    <% if notice.present? %>
      <p class="ui-notice" id="notice"><%= notice %></p>
    <% end %>

    <% if @course.lessons.any? && @course.lessons.first.video.present? %>
      <%= video_tag @course.lessons.first.video, controls: true, class: "w-full rounded-2xl border border-brown-200 bg-black/90 shadow-md" %>
    <% end %>

    <div class="content-card">
      <div class="mb-2 flex w-full flex-wrap items-center gap-2">
        <% @course.categories.each do |category| %>
          <span class="rounded-full bg-amaranth-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-amaranth-800"><%= category.name %></span>
        <% end %>
      </div>

      <p class="text-sm font-semibold uppercase tracking-wide text-gray-500">
        <%= @course.lessons.count %> <%= "lesson".pluralize(@course.lessons.count) %>
      </p>
      <h1 class="mt-1 text-3xl font-bold tracking-tight text-gray-900"><%= @course.title %></h1>
      <p class="mt-3 leading-relaxed text-gray-600"><%= @course.description %></p>
    </div>
  </div>

  <div class="w-full lg:max-w-sm">
    <%= render "sidebar" %>
  </div>
</div>
