<div class="flex flex-col gap-5 lg:pl-2">
  <div class="mt-6 lg:mt-0 flex justify-center items-center w-full">
    <div class="w-full overflow-hidden rounded-2xl border border-brown-200 bg-white shadow-md">
      <div class="bg-gradient-to-r from-amaranth-600 to-camelot-600 p-4">
        <h2 class="text-2xl font-bold text-white-50">Start Learning</h2>
      </div>
      <div class="p-4">
        <% if user_signed_in? %>
          <% if @completed_lessons&.any? %>
            <% if @completed_lessons.count == @course.lessons.count %>
              <p class="text-gray-700 text-base mb-4">
                You have completed this course. Congrats!
              </p>
              <%= link_to "Watch Again", course_lesson_path(@course, @course.first_lesson), class: "ui-btn ui-btn-primary w-full" %>
            <% else %>
              <p class="text-gray-700 text-base mb-4">
                Continue the course and pick up where you left off.
              </p>
              <%= link_to "Continue Course", course_lesson_path(@course, @course.next_lesson(current_user)), class: "ui-btn ui-btn-primary w-full" %>
            <% end %>
          <% else %>
            <p class="text-gray-700 text-base mb-4">
              Start the course and begin learning all about the world of web dev.
            </p>
            <%= link_to "Start Course", course_lesson_path(@course, @course.first_lesson), class: "ui-btn ui-btn-primary w-full" %>
          <% end %>
        <% else %>
          <p class="text-gray-700 text-base mb-4">
            Sign up for free today and start exploring the endless possibilities.
          </p>
          <%= link_to "Sign Up", new_user_registration_path, class: "ui-btn ui-btn-primary w-full" %>
        <% end %>
      </div>
    </div>
  </div>
  <% if @course.paid %>
    <div class="flex justify-center items-center w-full">
      <div class="w-full overflow-hidden rounded-2xl border border-brown-200 bg-white shadow-md">
        <div class="bg-gradient-to-r from-amaranth-600 to-camelot-600 p-4">
          <% if @user_unlocked_course %>
            <h2 class="text-2xl font-bold text-white-50">You have premium access</h2>
          <% else %>
            <h2 class="text-2xl font-bold text-white-50">Get more content</h2>
          <% end %>
        </div>
        <div class="p-4">
          <% if user_signed_in? %>
            <% if @user_unlocked_course %>
              <p class="text-gray-700 text-base mb-4">
                You have unlocked this course. Enjoy!
              </p>
              <% if @course.premium_description.present? %>
                <%= @course.premium_description %>
              <% end %>
            <% else %>
              <p class="text-gray-700 text-base mb-4">
                Unlock more content by purchasing the full course.
              </p>
              <% if @course.premium_description.present? %>
                <%= @course.premium_description %>
              <% end %>
              <%= form_tag checkouts_path(@course), method: :post, data: { turbo: false }, class: "mt-4" do %>
                <%= hidden_field_tag :course_id, @course.id %>
                <%= hidden_field_tag :stripeEmail, current_user.email %>
                <%= button_tag "Unlock Full Course", class: "ui-btn ui-btn-primary w-full" %>
              <% end %>
            <% end %>
          <% else %>
            <p class="text-gray-700 text-base mb-4">
              Sign up for free today and start exploring the endless possibilities.
            </p>
            <%= link_to "Sign Up", new_user_registration_path, class: "ui-btn ui-btn-primary w-full" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
