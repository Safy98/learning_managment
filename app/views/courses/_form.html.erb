<%= form_with(model: course, class: "space-y-4") do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation" class="ui-alert">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul class="list-disc ml-6">
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui-input-row">
    <%= form.label :title, class: "ui-label" %>
    <%= form.text_field :title, class: [ "w-full", { "border-red-400 ring-red-200": course.errors[:title].any? } ] %>
  </div>

  <div class="ui-input-row">
    <%= form.label :description, class: "ui-label" %>
    <%= form.text_field :description, class: [ "w-full", { "border-red-400 ring-red-200": course.errors[:description].any? } ] %>
  </div>

  <div>
    <%= form.submit class: "ui-btn ui-btn-primary w-full sm:w-auto cursor-pointer" %>
  </div>
<% end %>
