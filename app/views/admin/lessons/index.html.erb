<div class="flex flex-col w-full">
  <div class="mb-10">
    <% if notice.present? %>
      <p class="ui-notice"><%= notice %></p>
    <% end %>
    <h1 class="page-title mb-4"><%= @admin_course.title %> Lessons</h1>
    <%= link_to "New Lesson", new_admin_course_lesson_path(@admin_course), class: "ui-btn ui-btn-primary" %>
  </div>

  <div data-controller="lesson" data-lesson-course-value="<%= @admin_course.id %>" data-sortable-animation-value="150" id="admin_lessons" class="grid w-full grid-cols-1 gap-5 pb-4 md:grid-cols-2 xl:grid-cols-3">
    <% @admin_lessons.each do |admin_lesson| %>
      <div id="<%= admin_lesson.id %>">
        <%= link_to [:admin, @admin_course, admin_lesson] do %>
          <%= render admin_lesson %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
