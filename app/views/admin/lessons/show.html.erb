<div class="flex flex-col justify-start items-center w-full">
  <% if notice.present? %>
    <p class="ui-notice"><%= notice %></p>
  <% end %>

  <%= render @admin_lesson %>

  <div class="mt-4 flex flex-wrap justify-center gap-2">
    <%= link_to "Edit this lesson", edit_admin_course_lesson_path(@admin_course, @admin_lesson), class: "ui-btn ui-btn-primary" %>
    <%= link_to "Back to lessons", admin_course_lessons_path, class: "ui-btn ui-btn-accent" %>
    <%= button_to "Destroy this lesson", [:admin, @admin_course, @admin_lesson], method: :delete, class: "ui-btn ui-btn-danger cursor-pointer", data: { "turbo-confirm": "Are you sure?" } %>
  </div>
</div>
