<div class="flex flex-col justify-start items-center w-full">
  <% if notice.present? %>
    <p class="ui-notice"><%= notice %></p>
  <% end %>
  <div class="mb-6 w-full">
    <h1 class="page-title">Users</h1>
  </div>
  <div class="mb-8 flex w-full flex-col gap-2 md:flex-row md:justify-end">
    <%= form_with url: admin_users_path, method: :get, class: "flex gap-2" do |form| %>
      <%= form.text_field :query, placeholder: "Search", class: "min-w-60" %>
      <%= form.submit "Search", class: "ui-btn ui-btn-primary cursor-pointer" %>
    <% end %>
    <%= form_with url: admin_users_path, method: :get, class: "flex" do |form| %>
      <%= form.submit "Clear", class: "ui-btn ui-btn-accent cursor-pointer" %>
    <% end %>
  </div>
  <div class="ui-table-wrap w-full">
    <table class="ui-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Destroy User</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_users.each do |user| %>
          <tr>
            <td><%= link_to user.id, admin_user_path(user), class: "font-semibold text-amaranth-700 hover:underline" %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.to_formatted_s(:long) %></td>
            <td><%= user.updated_at.to_formatted_s(:long) %></td>
            <td>
              <%= button_to icon("fa-solid", "trash-can"), [:admin, user], method: :delete, data: { "turbo-confirm": "Are you sure? All their data will be deleted." }, class: "text-red-600 transition-colors hover:text-red-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
