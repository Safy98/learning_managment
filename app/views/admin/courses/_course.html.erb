<article id="<%= dom_id course %>" class="overflow-hidden rounded-2xl border border-brown-200 bg-white shadow-md">
  <% if course.image.present? %>
    <%= image_tag course.image, class: "h-48 w-full object-cover" %>
  <% else %>
    <%= image_tag "https://via.placeholder.com/320x180", class: "h-48 w-full object-cover" %>
  <% end %>
  <div class="space-y-4 p-4">
    <h2 class="text-xl font-bold text-gray-900"><%= course.title %></h2>
    <div class="flex flex-wrap gap-2">
      <%= link_to "Edit Course", edit_admin_course_path(course), class: "ui-btn ui-btn-primary" %>
      <%= link_to "View Lessons", admin_course_lessons_path(course), class: "ui-btn ui-btn-accent" %>
    </div>
  </div>
</article>
