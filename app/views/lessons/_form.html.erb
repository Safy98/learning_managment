<%= form_with(model: lesson, class: "space-y-4") do |form| %>
  <% if lesson.errors.any? %>
    <div id="error_explanation" class="ui-alert">
      <h2><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h2>

      <ul class="list-disc ml-6">
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui-input-row">
    <%= form.label :title, class: "ui-label" %>
    <%= form.text_field :title, class: ["w-full", { "border-red-400 ring-red-200": lesson.errors[:title].any? }] %>
  </div>

  <div class="ui-input-row">
    <%= form.label :description, class: "ui-label" %>
    <%= form.textarea :description, rows: 4, class: ["w-full", { "border-red-400 ring-red-200": lesson.errors[:description].any? }] %>
  </div>

  <div class="flex items-center gap-2">
    <%= form.check_box :paid, class: ["h-5 w-5 rounded border", { "border-red-400 ring-red-200": lesson.errors[:paid].any? }] %>
    <%= form.label :paid, class: "ui-label" %>
  </div>

  <div class="ui-input-row">
    <%= form.label :course_id, class: "ui-label" %>
    <%= form.text_field :course_id, class: ["w-full", { "border-red-400 ring-red-200": lesson.errors[:course_id].any? }] %>
  </div>

  <div>
    <%= form.submit class: "ui-btn ui-btn-primary w-full sm:w-auto cursor-pointer" %>
  </div>
<% end %>
