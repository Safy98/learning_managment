<% content_for :title, "Lessons" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="ui-notice" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-6 flex flex-wrap items-center justify-between gap-3">
    <h1 class="page-title">Lessons</h1>
    <%= link_to "New lesson", new_lesson_path, class: "ui-btn ui-btn-primary" %>
  </div>

  <div id="lessons" class="space-y-3">
    <% if @lessons.any? %>
      <% @lessons.each do |lesson| %>
        <div class="content-card flex flex-col justify-between gap-4 sm:flex-row sm:items-center">
          <%= render lesson %>
          <div class="flex w-full flex-col gap-2 sm:w-auto sm:flex-row">
            <%= link_to "Show", lesson, class: "ui-btn ui-btn-secondary w-full sm:w-auto" %>
            <%= link_to "Edit", edit_lesson_path(lesson), class: "ui-btn ui-btn-secondary w-full sm:w-auto" %>
            <%= button_to "Destroy", lesson, method: :delete, class: "ui-btn ui-btn-danger w-full cursor-pointer sm:w-auto", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No lessons found.</p>
    <% end %>
  </div>
</div>
