<div id="<%= dom_id lesson %>" class="space-y-2">
  <h2 class="text-lg font-semibold text-gray-900"><%= lesson.title %></h2>
  <p class="text-sm text-gray-600"><%= lesson.description %></p>
  <div class="flex flex-wrap gap-3 text-xs font-semibold uppercase tracking-wide text-gray-500">
    <span><%= lesson.paid? ? "Paid" : "Free" %></span>
    <span>Course #<%= lesson.course_id %></span>
  </div>
</div>
